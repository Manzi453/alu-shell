#!/usr/bin/env bash
# Script to display PID and process name of processes containing the word "bash"

# shellcheck disable=SC2009
for pid in /proc/[0-9]*; do
    # Check if the directory exists
    if [[ -d "$pid" ]]; then
        # Read the process name from the status file
        process_name=$(basename "$pid")
        cmdline=$(tr '\0' ' ' < "$pid/cmdline")
        # Check if the process name contains "bash"
        if [[ "$cmdline" == *bash* ]]; then
            echo "PID: ${process_name}, Process Name: ${cmdline}"
        fi
    fi
done

